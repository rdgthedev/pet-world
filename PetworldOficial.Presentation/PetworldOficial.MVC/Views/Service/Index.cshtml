@model IEnumerable<OutputServiceDTO>

@{
    Layout = "_Layout";
}

<div class="container-fluid text-black py-3">
    <br>
    <h2 class="display-6 text-center fw"><img src="/Images/Servicos.png" alt=""></h2>
    <br>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
else if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container">
    <div class="row">
        @foreach (var service in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="/Images/@service.ImageUrl" class="ImagemCard card-img-top" alt="..." style="height: 200px; object-fit: cover; width: 100%">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@service.Name</h5>
                        <div class="d-grid gap-2">
                            <a class="btn btn-primary" asp-controller="Schedule" asp-action="Create" asp-route-id="@service.Id">Agendar</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>