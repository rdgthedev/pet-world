@model DeleteAnimalViewModel

@{
    Layout = "_Layout";
}

<div class="container-fluid text-black py-3">
    <br>
    <h2 class="display-6 text-center fw">Dados do Pet</h2>
    <br>
</div>

<div class="container">
    <br>
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="d-flex justify-content-center align-items-center">
            <div class="col-md-8 alert alert-danger" role="alert">
                @TempData["ErrorMessage"]
                <button style="position: absolute; top: 0.7rem; right: 0; padding: 0.5rem 1rem;" type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    }
    else if (TempData["SuccessMessage"] != null)
    {
        <div class="d-flex justify-content-center align-items-center">
            <div class="col-md-8 alert alert-success" role="alert">
                @TempData["SuccessMessage"]
                <button style="position: absolute; top: 0.7rem; right: 0; padding: 0.5rem 1rem;" type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    }
    <form class="row g-3 d-flex justify-content-center align-items-center" enctype="multipart/form-data" asp-controller="Animal" asp-action="Delete" method="post">
        <input type="hidden" asp-for="@Model.Id">
        <input type="hidden" asp-for="@Model.UserId">

        <div class="col-md-8">
            <label asp-for="@Model.Name" class="form-label">Nome</label>
            <input asp-for="@Model.Name" type="text" class="form-control shadow-none" placeholder="Nome" readonly>
        </div>

        <div class="col-md-8">
            <label asp-for="@Model.Gender" class="form-label">Gênero</label>
            <input asp-for="@Model.Gender" type="text" class="form-control shadow-none" placeholder="Descrição" readonly>
        </div>

        <div class="col-md-8">
            <label asp-for="@Model.Species" class="form-label">Espécie</label>
            <input asp-for="@Model.Species" type="text" class="form-control shadow-none" placeholder="Descrição" readonly>
        </div>

        <div class="col-md-8">
            <label asp-for="@Model.Race" class="form-label">Raça</label>
            <input asp-for="@Model.Race" type="text" class="form-control shadow-none" placeholder="Preço" readonly>
        </div>

        <div class="d-grid gap-2 col-4 mx-auto col-md-5">
            <br>
            <button class="btn btn-dark btn-lg" type="submit">Deletar</button>
        </div>
    </form>
</div>