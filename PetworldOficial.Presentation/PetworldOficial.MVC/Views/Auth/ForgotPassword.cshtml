@model PetWorldOficial.Application.Commands.User.ForgotPasswordCommand

@{
    ViewData["Title"] = "Esqueci minha senha";
    Layout = "_LayoutLogin";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4 w-100" style="max-width: 400px; background-color: #444; color: white; border: none;">
        <div class="text-center">
            <h3 class="mb-4" style="color: #fff;">Esqueci minha senha</h3>
            <p class="text-muted">Digite seu e-mail para receber instruções</p>
        </div>

        <!-- Alertas de feedback -->
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @TempData["ErrorMessage"]
            </div>
        }
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }

        <!-- Formulário -->
        <form asp-controller="Auth" asp-action="ForgotPassword" method="post" novalidate>
            <!-- Campo de Email -->
            <div class="form-outline mb-4">
                <input asp-for="Email" type="email" id="email" class="form-control text-white" placeholder="Digite seu email" style="background-color: #555; border: 1px solid #666;" required/>
                <label class="form-label text-light" for="email">Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Botão de Envio -->
            <button class="btn btn-primary btn-block mb-3" type="submit">Enviar</button>
        </form>

        <!-- Link para Login -->
        <div class="text-center">
            <a asp-controller="Auth" asp-action="Login" class="text-info text-decoration-none">Voltar para login</a>
        </div>
    </div>
</div>