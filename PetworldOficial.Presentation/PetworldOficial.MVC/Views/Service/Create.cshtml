@model CreateServiceDTO

@{
    Layout = "_LayoutRegister";
    ViewData["Title"] = "Criar Serviço"; 
}

<div class="container-fluid text-black py-3">
    <br>
    <h2 class="display-6 text-center fw">Dados do Serviço</h2>
    <br>
</div>

<div class="container">
    <form class="row g-3 d-flex justify-content-center align-items-center" enctype="multipart/form-data" asp-controller="Service" asp-action="Create" method="post">
            
        <div class="col-md-8">
            <label asp-for="@Model.Name" class="form-label">Nome<span style="color: red;">*</span></label>
            <input asp-for="@Model.Name" type="text" class="form-control shadow-none" placeholder="Digite o nome">
        </div>

        <div class="col-md-8">
            <label asp-for="@Model.Price" class="form-label">Preço<span style="color: red;">*</span></label>
            <input asp-for="@Model.Price" type="text" class="form-control shadow-none" placeholder="Digite o preço">
        </div>

        <div class="col-md-8">
            <label class="form-label">Imagem<span style="color: red;">*</span></label>
            <input type="file" class="form-control shadow-none" name="file" placeholder="Escolha uma imagem">
        </div>
        <div class="d-grid gap-2 col-4 mx-auto col-md-5">
            <br>
            <button class="btn btn-dark btn-lg" type="submit">Cadastrar</button>
        </div>
    </form>
        
    <footer>

    </footer>
</div>