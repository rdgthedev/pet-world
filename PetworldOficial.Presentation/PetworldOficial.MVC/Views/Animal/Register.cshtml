@using PetWorldOficial.Domain.Enums
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model PetWorldOficial.Application.DTOs.Animal.Input.RegisterAnimalDTO

@{
    Layout = "_LayoutCRUD";
    ViewData["Title"] = "Registrar Pet"; 
}

<div class="container-fluid text-black py-3">
    <br>
    <h2 class="display-6 text-center fw">Dados do Pet</h2>
    <br>
</div>

<div class="container">
    <form class="row g-3 d-flex justify-content-center align-items-center" enctype="multipart/form-data" asp-controller="Animal" asp-action="Register" method="post">
        <input type="hidden" asp-for="@Model.UserId">
        
        <div class="col-md-7">
            <label asp-for="@Model.Name" class="form-label">Nome<span style="color: red;">*</span></label>
            <input asp-for="@Model.Name" type="text" class="form-control shadow-none" placeholder="Digite o nome" required>
        </div>
        
        <div class="col-md-3">
            <label asp-for="@Model.Gender" class="form-label">Gênero <span style="color: red;">*</span></label>
            <select asp-for="@Model.Gender" class="form-select shadow-none" required>
                <option value="" selected disabled>Selecione o gênero</option>
                @foreach (var gender in Enum.GetValues(typeof(EGender)))
                {
                    <option value="@gender">@gender</option>
                }
            </select>
        </div>
                    
        <div class="col-md-7">
            <label asp-for="@Model.Species" class="form-label">Espécie<span style="color: red;">*</span></label>
            <input asp-for="@Model.Species" type="text" class="form-control shadow-none" placeholder="Digite a espécie" required>
        </div>
        <div class="col-md-3">
            <label asp-for="@Model.BirthDate" class="form-label">Data de Nascimento<span style="color: red;">*</span></label>
            <input asp-for="@Model.BirthDate" type="date" class="form-control shadow-none" placeholder="Escolha a data" required>
        </div>
        <div class="col-md-10">
            <label asp-for="@Model.Race" class="form-label">Raça<span style="color: red;">*</span></label>
            <input asp-for="@Model.Race" type="text" class="form-control shadow-none" placeholder="Digite a raça" required>
        </div>
        <div class="d-grid gap-2 col-4 mx-auto col-md-5">
            <br>
            <button class="btn btn-dark btn-lg" type="submit">Cadastrar</button>
        </div>
    </form>
        
    <footer>

    </footer>
</div>
