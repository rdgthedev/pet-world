@using Microsoft.AspNetCore.Mvc.TagHelpers
@model PetWorldOficial.Application.Commands.Product.CreateProductCommand

@{
    ViewData["Title"] = "Criar Produto";
    Layout = "_Layout";
}

<div class="container-fluid py-3">
    <br>
    <h1 class="text-center">
        Dados Produto
    </h1>
    <br>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="d-flex justify-content-center align-items-center">
        <div class="col-md-8 alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
            <button style="position: absolute; top: 0.7rem; right: 0; padding: 0.5rem 1rem;" type="button" class="btn-close"
                    data-bs-dismiss="alert" aria-label="Close">
            </button>
        </div>
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="d-flex justify-content-center align-items-center">
        <div class="col-md-8 alert alert-success" role="alert">
            @TempData["SuccessMessage"]
            <button style="position: absolute; top: 0.7rem; right: 0; padding: 0.5rem 1rem;" type="button" class="btn-close"
                    data-bs-dismiss="alert" aria-label="Close">
            </button>
        </div>
    </div>
}

<div class="container">
    <form class="row g-3 d-flex justify-content-center align-items-center" enctype="multipart/form-data" asp-controller="Product" asp-action="Create" method="post">

        <div class="col-md-8">
            <label asp-for="@Model.Name" class="form-label">Nome <span style="color: red;">*</span></label>
            <input asp-for="@Model.Name" type="text" class="form-control shadow-none" placeholder="Nome">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="col-md-8">
            <label asp-for="@Model.Description" class="form-label">Descrição <span style="color: red;">*</span></label>
            <input asp-for="@Model.Description" type="text" class="form-control shadow-none" placeholder="Descrição">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="col-md-8">
            <label asp-for="@Model.Price" class="form-label">Preço <span style="color: red;">*</span></label>
            <input asp-for="@Model.Price" type="number" min="0" step="0.1" class="form-control shadow-none" placeholder="Preço">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="col-md-8">
            <label asp-for="@Model.Quantity" class="form-label">Quantidade <span style="color: red;">*</span></label>
            <input asp-for="@Model.Quantity" type="number" min="1" class="form-control shadow-none" placeholder="Digite a quantidade">
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="col-md-8">
            <label asp-for="@Model.CategoryId" class="form-label">Categoria <span style="color: red;">*</span></label>
            <select asp-for="@Model.CategoryId" class="form-select shadow-none">
                <option value="" selected disabled>Selecione um categoria</option>
                @foreach (var category in Model.Categories)
                {
                    <option value="@category.Id">@category.Title</option>
                }
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="col-md-8">
            <label asp-for="@Model.SupplierId" class="form-label">Fornecedor <span style="color: red;">*</span></label>
            <select asp-for="@Model.SupplierId" class="form-select shadow-none">
                <option value="" selected disabled>Selecione um fornecedor</option>
                @foreach (var supplier in Model.Suppliers)
                {
                    <option value="@supplier.Id">@supplier.Name</option>
                }
            </select>
            <span asp-validation-for="SupplierId" class="text-danger"></span>
        </div>

        <div class="col-md-8">
            <label asp-for="@Model.File" class="form-label">Imagem <span style="color: red;">*</span></label>
            <input asp-for="@Model.File" type="file" class="form-control shadow-none" name="file" placeholder="Escolha uma imagem">
            <span asp-validation-for="File" class="text-danger"></span>
        </div>
        <div class="d-grid gap-2 col-4 mx-auto col-md-5">
            <br>
            <button class="btn btn-dark btn-lg" type="submit">Cadastrar</button>
        </div>
    </form>

    <footer>
    </footer>
</div>