@model PetWorldOficial.Application.Commands.User.ResetPasswordCommand

@{
ViewData["Title"] = "Redefinir Senha";
Layout = "_LayoutLogin";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4 w-100" style="max-width: 400px; background-color: #444; color: white; border: none;">
        <div class="text-center">
            <h3 class="mb-4" style="color: #fff;">Redefinir Senha</h3>
            <p class="text-muted">Informe sua nova senha</p>
        </div>

        <!-- Alertas de feedback -->
        @if (TempData["ErrorMessage"] != null)
        {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
        }
        @if (TempData["SuccessMessage"] != null)
        {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
        }

        <!-- Formulário -->
        <form asp-controller="Auth" asp-action="ResetPassword" method="post" novalidate>
            <input type="hidden" asp-for="@Model.Email">
            <input type="hidden" asp-for="@Model.Token">
            
            <!-- Campo de Nova Senha -->
            <div class="form-outline mb-4">
                <input asp-for="Password" type="password" id="newPassword" class="form-control text-white" placeholder="Nova senha" style="background-color: #555; border: 1px solid #666;" required/>
                <label class="form-label text-light" for="newPassword">Nova Senha</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Campo de Confirmação da Senha -->
            <div class="form-outline mb-4">
                <input asp-for="ConfirmPassword" type="password" id="confirmPassword" class="form-control text-white" placeholder="Confirmar senha" style="background-color: #555; border: 1px solid #666;" required/>
                <label class="form-label text-light" for="confirmPassword">Confirmar Senha</label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Botão de Envio -->
            <button class="btn btn-primary btn-block mb-3" type="submit">Redefinir Senha</button>
        </form>

        <!-- Link para Login -->
        <div class="text-center">
            <a asp-controller="Auth" asp-action="Login" class="text-info text-decoration-none">Voltar para login</a>
        </div>
    </div>
</div>
