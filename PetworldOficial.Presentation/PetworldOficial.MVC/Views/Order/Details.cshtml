@using PetWorldOficial.Domain.Enums
@using PetworldOficial.MVC.Utils
@model PetWorldOficial.Application.ViewModels.Order.OrderDetailsViewModel

@{
    ViewData["Title"] = "Detalhes do Pedido";
    Layout = "_Layout";
}

<div class="container-fluid py-3">
    <h1 class="text-center">Detalhes do Pedido 20</h1>

    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Informações do Pedido</h5>
            <p><strong>Método de pagamento:</strong> @(Enum.Parse<EPaymentMethod>(Model.PaymentMethod).GetDisplayName())</p>
            <p><strong>Data de pagamento:</strong> @Model.PaymentDate.ToString("dd/MM/yyyy")</p>
            <p><strong>Status:</strong> @(Enum.Parse<EOrderStatus>(Model.Status).GetDisplayName())</p>

            <!-- Exibir o endereço de entrega -->
            <p><strong>Endereço de entrega:</strong> Avenida Senador Feijó, 422</p>
        </div>
    </div>

    <h3 class="mt-4">Produtos Comprados</h3>
    <div class="row">
        @foreach (var item in Model.Items)
        {
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column align-items-center">
                    <img
                        src="/Images/@item.Product.ImageUrl"
                        alt="Imagem do produto"
                        class="img-fluid rounded mb-3"
                        style="width: 100px; height: 100px; object-fit: cover;"/>
                    <h5 class="card-title text-center">@item.Product.Name</h5>
                    <p class="card-text"><strong>Quantidade: @item.Quantity</strong></p>
                    <p class="card-text"><strong>Valor Total:</strong> @item.TotalPrice.ToString("C")</p>
                </div>
            </div>
        </div>
        }
    </div>
</div>